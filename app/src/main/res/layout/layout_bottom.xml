<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rect"
    tools:showIn="@layout/activity_seat">

    <TextView
        android:padding="12dp"
        android:id="@+id/labelSeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="seats"
        android:textSize="19sp"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/labelPrice"
        android:layout_toStartOf="@+id/labelPrice" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs 00.00"
        android:padding="12dp"
        android:textColor="#D50000"
        android:textStyle="bold|italic"
        android:textSize="19sp"
        android:layout_weight="0.1"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_nxt"
        android:layout_toStartOf="@+id/btn_nxt"
        android:id="@+id/labelPrice" />
    <Button
        android:id="@+id/btn_nxt"
        android:padding="12dp"
        android:text="Done"
        android:background="#000"
        android:textSize="19sp"
        android:textColor="#FFF"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />
</LinearLayout>